{% extends "base.html.twig" %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <h2 class="text-success">Jak się ma Polska Waluta?</h2><br/>
                <h4 class="text-default">Sprawdź aktualną cenę Złota</h4><br/>

                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-success">
                        {% for zl in gold %}
                            <div class="panel-heading">Cena na: {{zl.data|date('d-m-Y')}} </div>
                            <div class="panel-body">{{zl.cena}}</div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-sm-4"></div>
            </div>

        </div>
    </div>

{% endblock %}
